{
  "name": "AppSettings",
  "type": "object",
  "properties": {
    "theme": {
      "type": "string",
      "enum": [
        "light",
        "dark"
      ],
      "default": "dark",
      "description": "App theme"
    },
    "view_mode": {
      "type": "string",
      "enum": [
        "list",
        "card"
      ],
      "default": "card",
      "description": "View mode for games and reminders"
    },
    "snooze_duration": {
      "type": "number",
      "enum": [
        5,
        15,
        30,
        60,
        120,
        180,
        240,
        360,
        720,
        1440
      ],
      "default": 15,
      "description": "Snooze duration in minutes"
    },
    "is_premium": {
      "type": "boolean",
      "default": false,
      "description": "Whether user has unlocked premium"
    },
    "sort_by": {
      "type": "string",
      "enum": [
        "alphabetical",
        "reminders"
      ],
      "default": "alphabetical",
      "description": "Sorting preference for games"
    }
  },
  "required": []
}
